<style>
html, a, p {
	color: #1f2d3d;
}

@font-face { font-family: 'KCC-eunyoung'; src: url('https://cdn.jsdelivr.net/gh/projectnoonnu/noonfonts_one@1.0/KCC-eunyoung-Regular.woff') format('woff'); font-weight: normal; font-style: normal; }

li.nav-item a#regist {
  color: rgb(253,84,0);
}

#banner {
  background-color: rgb(253,84,0);
  height: 280px;
  width: 100%;
}

.ment {
  padding-top: 4%;
  text-align: center;
}

.ment h2 {
  font-size: 2.5rem;
}

@media all and (max-width: 992px){
	.submit-form .submit-form-content{
		width: 90%;
	}
}
@media all and (min-width: 992px) {
	.submit-form .submit-form-content{
		width: 40%;
	}
}
.new_nav {
	height: 50px;
	width: 100%;
	background-color: #fdd400;
	display: flex;
	align-items: center;
}

.form-control{
	padding: 0.6rem 0.75rem;
}


.form-control:focus {
  outline: none;
  border-color: #2c97de;
  box-shadow: 0 0 5px rgba(44, 151, 222, 0.2);
}

.submit-form{
	display: flex;
	justify-content: center;
	align-items: center;
}

.form-group{
	margin: 1.5rem 0;
}

.form-label {
	margin-bottom: 0.5rem;
	font-size: 1rem;
}
.main-label {
	font-size: 1.8rem;
	font-weight: bold;
	margin-left: 35%;
}

.btn-groups {
	display: flex;
	justify-content: flex-end;
}

form {
	margin-top: 2%;
}

textarea {
	height: 200px;
}

input[type=text],
textarea {
	border: 1px solid #cfd9db;
	border-radius: .25em;
	box-shadow: inset 0 1px 1px rgba(0,0,0,.08);
	padding: 12px;
}

.file-input {
  display: inline-block;
  text-align: left;
  background: #fff;
  padding: 16px;
  width: 450px;
  position: relative;
  border-radius: 3px;
}

.file-input > [type='file'] {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  z-index: 10;
  cursor: pointer;
}

.file-input > .button {
  display: inline-block;
  cursor: pointer;
  background: #eee;
  padding: 8px 16px;
  border-radius: 2px;
	margin-right: 8px;
	border: 1px solid #cfd9db;
	border-radius: .25em;
	box-shadow: 0 1px 1px rgba(0,0,0,.08);
	padding: 12px;
}

.file-input:hover > .button {
  background: dodgerblue;
	color: white;
	border: 1px solid #cfd9db;
	border-radius: .25em;
	box-shadow: 0 1px 1px rgba(0,0,0,.08);
	padding: 12px;
}

.btn-groups > #btn1:hover {
	background-color: rgb(0,42,253);
	color: white;
}

.btn-groups > #btn2:hover {
	background-color: rgb(253,212,0);
}

.file-input > .label {
  color: #333;
  white-space: nowrap;
  opacity: .3;
}

.file-input.-chosen > .label {
	color: rgb(253,84,0);
  opacity: 1;
}

.more-book:hover {
	color: black;
}

</style>

<%= render 'nav2' %>
<div class="whole">
  <div class="ment"><h2>책등록하기</h2></div>
<%= render 'form', book: @book, path: books_path, form_method: 'post' %>
</div>

<%= render 'footer' %>

<script>
	(function() {
	  $(document).on('click', '.more-book', function(e) {
	    e.preventDefault();
	    var p = $('.whole');
	    p.append("<%= j(render 'form', book: @book, path: books_path, form_method: 'post') %>");
	  });
	})();

// Also see: https://www.quirksmode.org/dom/inputfile.html

var inputs = document.querySelectorAll('.file-input')

for (var i = 0, len = inputs.length; i < len; i++) {
  customInput(inputs[i])
}

function customInput (el) {
  const fileInput = el.querySelector('[type="file"]')
  const label = el.querySelector('[data-js-label]')
  
  fileInput.onchange =
  fileInput.onmouseout = function () {
    if (!fileInput.value) return
    
    var value = fileInput.value.replace(/^.*[\\\/]/, '')
    el.className += ' -chosen'
    label.innerText = value
  }
}

</script>


