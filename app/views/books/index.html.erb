<style>
  * {
    text-align: center;
    align-items: center;
  }

  .books_title {
    height: 50px;
    display: flex;
    justify-content: space-between;
    padding: 4% 10%;
    font-size: 0.9rem;
  }

  .inner-image {
    height: 100%;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
  }

  .book_contents {
    padding: 1.2rem 0 10rem 0;
    min-height: 80vh;
  }

@media all and (max-width: 576px){
  .card-image-top{
    width: 250px;
    height: 250px;
  }
}
@media all and (min-width: 577px) and (max-width: 992px){
  .card-image-top{
    width: 200px;
    height: 200px;
  }
}
@media all and (min-width: 993px) {
  .card-image-top{
    width: 230px;
    height: 230px;
  }
}
.choice > span {
   margin-right: 3px;
   cursor: pointer;
}

.choice span.active {
  color: #fdd400;
}

</style>

<%= render 'nav' %>
<main>
  <div class="books_title">
    <div class="result"><strong style="font-weight: 600">"경제학원론"</strong>에 대한 검색 결과입니다</div>
    <div class="choice">
    <span class="active">전체</span> | <span>이름순</span> | <span>가격순</span> | <span>인기순</span>
    </div>
  </div>
  <div class="book_contents container">
    <div class="row">
      <% @books.each do |b| %>
      <div class="col-12 col-xl-3 col-md-4 col-sm-6 card" style="margin-bottom: 3rem; border: none;">
        <%= link_to book_path(b.id)do %>
        <div class="card-image-top">
          <div class="inner-image" style="background-image: url(<%=b.img_url%>)"></div>
        </div>
        <div class="card-body" style="padding-bottom: 1.5rem;">
          <h4 class="card-title" style="font-weight: bold;"><%=b.bookname%></h4>
          <p class="card-text"><%= b.price%>원</p>
        </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</main>
<%= render 'footer' %>
