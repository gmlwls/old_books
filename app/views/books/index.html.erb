<style>
  .card {
    border: none;
    align-items: center;
  }
  .card-image-top{
    margin: auto 0;
    width: 80%;
    height: 230px;
    background-size: 100% 100%;
    background-repeat: no-repeat;
    background-position: center;
  }
  main {
    margin-top: 30px;
    margin-bottom: -50px;
  }
  .card-body{
    text-align: center;
  }
  .card-title{
    font-weight: bold;
  }
  .title{
    font-size: 1.2rem;
  }
  .contents{
    min-height: 800px;
    height: auto;
    padding-right: 5%;
    padding-left: 5%;
  }
@media all and (max-width: 576px){
  .card-image-top{
    width: 200px;
    height: 280px;
  }
}
@media all and (min-width: 576) and (max-width: 992px){
  .card-image-top{
    width: 160px;
  }
}
@media all and (min-width: 992px) {
  .card-image-top{
    width: 170px;
  }
}
.footer {
  grid-column-start: 1;
  grid-column-end: 5;
  text-align: center;
  clear: both;
  position: relative;
  max-height: 180px;
  background-color: #303952;
}

.makers {
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.3333333;
    margin-top: 5px;
    color:white;
}

.copyright {
    margin-bottom: 0;
    font-size: 0.8rem;
    line-height: 2;
    color: #8d8d8d;
}
</style>
<header>
<%= render 'nav' %>
</header>
<main>
  <div class="contents">
    <div class="book_contents container">
      <div class="row">
        <% @books.each do |b| %>
        <div class="col-12 col-lg-3 col-md-4 col-sm-6 card">
          <%= link_to book_path(b.id)do %>
          <div class="card-image-top" style="background-image: url(<%=b.img_url%>);"></div>
          <div class="card-body">
            <h4 class="card-title title"><%=b.bookname%></h4>
            <p class="card-text price"><%= b.price%>원</p>
          </div>
          <% end %>
        </div>

        
        <% end %>
      </div>
    </div>
  </div>
</main>

<footer class="footer py-3">
  <p class="makers px-3 py-2">by 김희진</p>
  <p class="copyright">&copy; 2018 <strong style="color:white;">WebStudioProject</strong>. All Rights Reserved.</p>
</footer> 