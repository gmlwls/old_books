<% books.each do |b| %>
<div class="col-12 col-xl-3 col-md-4 col-sm-6 card" id="eachcard">
  <%= link_to book_path(b.id)do %>
  <div class="card-image-top">
    <div class="inner-image" style="background-image: url(<%=b.img_url.first%>)"></div>
  </div>
  <div class="card-body">
    <div class="card-title"><h4><%=b.bookname%></h4></div>
    <p class="card-text"><%= b.author%></p>
    <p class="card-text"><%= b.price%>Ïõê</p>
    <p class="card-text" id="discnt"><%= b.discount%>%</p>
  </div>
  <% end %>
</div>
<% end %>

<%= paginate @books %> 

<script>
  $(document).ready(function () {
    var cw = $('.card-image-top').height();
    $('.card-image-top').css({'width': cw + 'px'});
  });
</script>