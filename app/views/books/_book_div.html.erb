<style>
  body {
    font-size: 16px;
    line-height: 26px;
    font-weight: 300;
  }

  .books_title {
    padding: 1rem;
    padding-bottom: 0rem;
  }

  #eachcard {
    padding: 0 0.5rem;
    height: 10rem;
    margin-bottom: 0.5rem;
  }

  .card-body {
    padding: 0rem;
    width: 80%;
  }

  #eachcard a {
    display: flex;
    height: 100%;
    width: 100%;
  }

  .card-image-top {
    height: 100%;
  }

  .inner-image {
    height: 100%;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    /*for debugging */
    border: 1px solid gray;
  }

  .choice > span {
    margin-right: 3px;
    cursor: pointer;
}
  .choice span.active {
    color: #fdd400;
  }
  .nav-link#search2 {
    visibility: hidden;
  }
  .no_books {
    visibility: hidden;
    margin-top: 5%;
  }
  .choice {
    display: flex;
    justify-content: flex-end;
  }

  .choice > span {
    font-size: 0.9rem;
  }

  #discnt {
  color: red;
  }

