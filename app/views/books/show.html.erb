$(document).scroll(function() {
  if ($(window).scrollTop() > 350) {
  $('#mobilebtn').css('color','black');
}
  else {   
  $('#mobilebtn').css('color','black');
}      
});
  $(document).ready(function () {
		$('.minititle span').text('상세보기');

    var mw = $('.eachimg').width();
    $('.eachimg').css({'height': mw + 'px'});
  });
</script>