<style>
  .container{
    margin: 100px;
  }
  h2 {
    font-size: 1.2rem;
    font-weight: bold;
    color: gray;
  }
  .field{
    margin: 10px 0;
  }
  label{
    margin-bottom: 3px;
  }
  .field1 > input{
    width: 100%;
    height: 30px;
  }
  .actions{
    margin-bottom: 10px;
  }
</style>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
<h2><%= t('.sign_in') %></h2><hr>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field field1">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field field1">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit t('.sign_in') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
