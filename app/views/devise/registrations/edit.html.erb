<h2><%= t('회원 정보 수정', resource: resource_name.to_s.humanize) %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :이름 %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", required: true %>
  </div>

  <div class="field">
    <%= f.label :학과 %><br />
    <%= f.text_field :school, autofocus: true, autocomplete: "school", required: true, placeholder: "예) 경영학과" %>
    
  </div>

  <div class="field">
    <%= f.label :학번 %><br />
    <%= f.number_field :studentid, autofocus: true, autocomplete: "studentid", required: true, placeholder: "숫자만 기입 ex.14", in: 1.0..20.0, step: 1.0, :pattern => '.{1,20}' %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, '새 비밀번호(6자리 이상)' %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i><br />
    <%= f.password_field :password, autocomplete: "off", :required => true, :pattern => '.{6,}' %>
    <% if @minimum_password_length %>
      <br />
      <em><%= t('(6자리 이상으로 해주세요)', count: @minimum_password_length) %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, '새 비밀번호 한번 더 입력' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :required => true, :pattern => '.{6,}' %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", :required => true, :pattern => '.{6,}' %>
  </div>

  <div class="actions">
    <%= f.submit t('.update') %>
  </div>
<% end %>



<p><%= t('.unhappy') %> <%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete %></p>

<%= link_to t('devise.shared.links.back'), :back %>
